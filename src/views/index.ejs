<div>
  <meta name="mapbox-token" content="<%= mapboxToken %>">
  <div id="dashboard-grid">
    <aside id="filters-column">
      <h2>Filters</h2>
      <form id="filters" style="display:flex;gap:8px;flex-direction:column;">
      <div>
        <label>Start date</label>
        <input type="datetime-local" name="start_date" />
      </div>
      <div>
        <label>End date</label>
        <input type="datetime-local" name="end_date" />
      </div>
      <div>
        <label>Duration min</label>
        <input type="number" name="duration_min" min="0" />
      </div>
      <div>
        <label>Duration max</label>
        <input type="number" name="duration_max" min="0" />
      </div>
      <div>
        <label>Distance min</label>
        <input type="number" step="0.01" name="distance_min" min="0" />
      </div>
      <div>
        <label>Distance max</label>
        <input type="number" step="0.01" name="distance_max" min="0" />
      </div>
      <div>
        <label>Store and Fwd</label>
        <select name="store_and_fwd_flag">
          <option value="all">All</option>
          <option value="Y">Y</option>
          <option value="N">N</option>
        </select>
      </div>
      <div>
        <label>Vendor</label>
        <select name="vendor_id" id="vendor-select">
          <option value="">All</option>
        </select>
      </div>
      <div>
        <button type="submit">Apply</button>
        <button type="button" id="reset-filters">Reset</button>
      </div>
      </form>
    </aside>
    <main>
      <h2>Dashboard</h2>
      <section>
        <div id="cards" style="display:flex;gap:12px;flex-wrap:wrap">
          <div><strong>Total trips:</strong> <span id="card-total">-</span></div>
          <div><strong>Avg duration (s):</strong> <span id="card-avg-duration">-</span></div>
          <div><strong>Avg distance (mi):</strong> <span id="card-avg-distance">-</span></div>
          <div><strong>Avg speed (mph):</strong> <span id="card-avg-speed">-</span></div>
        </div>
      </section>
      <section style="margin-top:16px">
        <div id="map"></div>
      </section>
      <section style="margin-top:16px">
        <div style="display:flex;justify-content:space-between;align-items:center">
          <div>
            <button id="prev-page">Prev</button>
            <span id="page-info">Page 1</span>
            <button id="next-page">Next</button>
          </div>
          <div>
            <label>Page size</label>
            <select id="page-size">
              <option>10</option>
              <option selected>20</option>
              <option>50</option>
              <option>100</option>
            </select>
          </div>
        </div>
        <div class="table-wrap" style="margin-top:8px">
          <table id="trips-table" class="table-striped" border="1" cellspacing="0" cellpadding="4">
            <thead></thead>
            <tbody></tbody>
          </table>
        </div>
      </section>
    </main>
  </div>
</div>
<script src="/js/scripts.js"></script>